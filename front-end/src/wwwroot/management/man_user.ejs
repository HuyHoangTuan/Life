<div>
    <div class="info">
        <h1>Management</h1>
    </div>
    <ul class="list-nav">
        <li onclick="changePage('/management/users')">Users</li>
        <li onclick="changePage('/management/albums')">Albums</li>
        <li onclick="changePage('/management/playlists')">Playlists</li>
    </ul>
</div>
<div class="content-view">
    <section>
        <div class="grid-searchbar">
            <div>
                <h2>Users</h2>
            </div>
            <div><input type="text" placeholder="Search here"></div>
            <div>Filter</div>
        </div>
        <div class="flex-row">
            <button onclick="toggleDialog('dialog-add')">
                + Add new user
            </button>
        </div>
        <div class="grid-table" id="man-user-list">
            <div>
                <h3>ID</h3>
                <h3>Name</h3>
                <h3>Email</h3>
                <h3>Type</h3>
            </div>
            <%userList.forEach((user)=> {%>
                <div user-id="<%= user.id %>" user-name="<%= user.name %>" user-email="<%= user.email %>"
                    user-role="/albums/<%= user.role %>/cover" user-status="<%= user.status %>"
                    onclick="changePage(`/management/users/<%= user.id %>`)">
                    <span>
                        <%= user.id%>
                    </span>
                    <span>
                        <%= user.name%>
                    </span>
                    <span>
                        <%= user.email%>
                    </span>
                    <span>
                        <%= user.roleName%>
                    </span>
                </div>
                <%})%>
        </div>
    </section>

    <form class="dialog hidden" id="dialog-add" method="POST" action="/users">
        <h1>Add new user</h1>
        <div class="dialog-content">
            <div class="dialog-image">
                <img class="avatar" field="album-cover">
            </div>
            <div class="flex-form">
                <span>Name</span>
                <input type="text" field="user-name" name="display_name">
                <span>E-mail</span>
                <input type="text" field="user-email" name="email">
                <span>Password</span>
                <input type="password" field="user-password" name="password">
                <span>Confirm Password</span>
                <input type="password">
                <span>Role</span>
                <select name="role">
                    <option value="0">Admin</option>
                    <option value="1">Artist</option>
                    <option value="2">User</option>
                </select>
                <span>Status</span>
                <div></div>
                <!-- <span>Status</span>
            <div></div> -->
            </div>
        </div>
        <div class="dialog-controls">
            <input type="reset" value="Reset">
            <button onclick="submitForm('dialog-add')">Update</button>
            <button onclick="toggleDialog('dialog-add', resetForm('dialog-add'))">Cancel</button>
        </div>
    </form>
</div>