<div>
	<div class="info-album">
		<img src="/albums/<%= album.id%>/cover" />
		<h1>
			<%= album.name%>
		</h1>
		<h3>by <%= album.artist_name%>
		</h3>
		<span>
			<%= album.release_date.substr(0, 4) %>
		</span>
	</div>
	<div class="bt-group">
		<button id="bt-fav" class="bt-i icon-font <% if (isFav) { %>fav<% } %>" style="font-size: 1.2rem;" onclick="toggleFavAlbum(<%= uid %>, <%= album.id %>, this)">
			
		</button>
		<button class="bt-i icon-font">play_arrow</button>
		<button class="bt-i icon-font">more_horiz</button>
	</div>
	<ul class="list-nav">
		<li>Track list</li>
		<li>Comments</li>
	</ul>
</div>
<div class="content-view">
	<section>
		<h2>Track list</h2>
		<div class="grid-table" id="track-list">
			<div>
				<h3>#</h3>
				<h3>Title</h3>
				<h3>Duration</h3>
				<h3>=</h3>
			</div>
			<% album.tracks.forEach(track=> { %>
				<div track-id="<%= track.id %>" track-title="<%= track.title%>" track-artist-id="<%= track.artist_id %>"
					track-artist-name="<%= track.artist_name %>" length="<%= track.duration %>"
					onclick="playTrack(this)">
					<span>
						<%= track.track_num %>
					</span>
					<span>
						<%- track.title %>
					</span>
					<span>
						<%= new Date(null, null, null, null, null, track.duration).toTimeString().substr(3,5)%>
					</span>
					<span class="icon-font bt-i" onclick="currentTrack=<%= track.id %>;togglePopup(event)"> add </span>
				</div>
				<% }) %>
		</div>
	</section>
	<section>
		<h2>Comments</h2>
		<div class="comment" style="align-items: center">
			<img class="avatar" src="/users/<%= uid %>/avatar">
			<div class="relative">
				<input id="input-comment" type="text" style="width: 95%" placeholder="Write your comment..." oninput="this.classList.remove('error')">
				<button style="position: absolute; right: 5%" class="bt-i icon-font style=" font-size" onclick="postComment()">send</button>
			</div>
		</div>
		<div class="comment-list" id="comment-list" style="display: flex;flex-direction: column-reverse;">
			<% commentList.forEach(comment => {%>
				<div class="comment" comment-id="">
					<img class="avatar" src="/users/<%= comment.creator_id %>/avatar">
					<div>
						<b><%= comment.display_name %></b>
						<div class="comment-content"><%= comment.content %></div>
						<h4><span class="icon-font">access_time_filled</span> <%= comment.created_timestamp %> </h4>
					</div>
				</div>
			<%}) %>
		</div>
	</section>
</div>
<ul class="popup hidden">
	<% playlists.forEach((playlist)=>{%>
	<li onclick="addTrackToPL( <%= playlist.id %>)"> <%= playlist.title %> </li>	
	<%}) %>
	<li onclick="toggleDialog('dialog-add')"> + Create new playlist </li>
</ul>
<form class="dialog hidden" id="dialog-add" method="POST" action="/users/<%= uid %>/playlists" onsubmit="return false;">
    <h1>Create new playlist</h1>
    <div class="dialog-content">
        <div class="grid-dialog">
            <span>Title</span>
            <input type="text" name="title" origin-val="">
        </div>
    </div>
    <div class="dialog-controls">
        <input type="reset" value="Reset">
        <button onclick="addPlaylistTrack()">Add</button>
        <button onclick="toggleDialog('dialog-add', resetTForm)">Cancel</button>
    </div>
</form>
<script>
	curChannel = window.location.pathname;
</script>